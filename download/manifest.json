{
  "manifest_version": 3,
  "name": "UNO Picker",
  "version": "0.3.11",
  "description": "Picker zawodnik√≥w + flagi kraju dla UNO",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.overlays.uno/*",
    "https://score.vestmedia.pl/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.overlays.uno/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "players.json",
        "picker.css",
        "injected.js"
      ],
      "matches": [
        "https://app.overlays.uno/*",
        "https://score.vestmedia.pl/*"
      ]
    }
  ]
}