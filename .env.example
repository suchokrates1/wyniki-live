# Przykładowa konfiguracja zmiennych środowiskowych dla wyniki-live
# Skopiuj ten plik do .env i uzupełnij wartości zgodnie z poniższymi opisami.

ADMIN_PASSWORD=
HISTORY_DELETE_PASSWORD=

# Uwierzytelnienie i komunikacja z Overlays
UNO_BASE=https://app.overlays.uno/apiv2/controlapps
UNO_AUTH_BEARER=

# Parametry odpytywania API
RPM_PER_COURT=55
BURST=8

# Konfiguracja aplikacji
DB_PATH=wyniki_archive.sqlite3
PORT=8080
SECRET_KEY=
FLASK_SECRET_KEY=
SESSION_SECRET=
STATE_LOG_SIZE=200
MATCH_HISTORY_SIZE=50

# Identyfikatory overlay dla poszczególnych kortów
KORT1_ID=
KORT2_ID=
KORT3_ID=
KORT4_ID=
# Dodaj kolejne zmienne KORT{N}_ID w razie potrzeby.
