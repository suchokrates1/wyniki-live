# Bandit configuration for security linting
# https://bandit.readthedocs.io/

[bandit]
exclude_dirs = [
    '/tests/',
    '/venv/',
    '/.venv/',
    '/env/',
]

# Skip specific tests
skips = [
    # B101: Test for use of assert (we use it in tests)
    'B101',
    # B601: Test for shell injection (we control the inputs)
    'B601',
]

# Severity level
confidence = HIGH
